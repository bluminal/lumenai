+import React from 'react';
+
+interface LinkItem {
+  label: string;
+  url: string;
+  description?: string;
+}
+
+interface ExternalLinksProps {
+  links: LinkItem[];
+  title?: string;
+}
+
+export function ExternalLinks({ links, title = 'Resources' }: ExternalLinksProps) {
+  return (
+    <nav className="external-links">
+      <h3>{title}</h3>
+      <ul>
+        {links.map((link) => (
+          <li key={link.url}>
+            <a href={link.url} target="_blank">
+              {link.label}
+            </a>
+            {link.description && (
+              <p className="link-description">{link.description}</p>
+            )}
+          </li>
+        ))}
+      </ul>
+    </nav>
+  );
+}
