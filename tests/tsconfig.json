{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "schemas/**/*.ts",
    "helpers/**/*.ts",
    "assertions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".cache",
    "__snapshots__"
  ]
}
